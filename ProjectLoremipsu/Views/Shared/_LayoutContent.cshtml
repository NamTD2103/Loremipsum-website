    <section class="content-section">
        <div class="slideshow-container">
            <div class="mySlides"><img src="~/Content/image/img1-1.jpg" alt="Living room"></div>
            <div class="mySlides"><img src="~/Content/image/img1-2.jpg" alt="Dining room"></div>
            <div class="mySlides"><img src="~/Content/image/img1-3.jpg" alt="Bedroom"></div>
