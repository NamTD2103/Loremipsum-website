            <button class="prev" onclick="plusDivs(-1)">&#10094;</button>
            <button class="next" onclick="plusDivs(1)">&#10095;</button>
        </div>

        <div class="thumbnail-row">
            <div class="thumbnail" onclick="currentDiv(1)"><img src="~/Content/image/img1-1.jpg"></div>
            <div class="thumbnail" onclick="currentDiv(2)"><img src="~/Content/image/img1-2.jpg"></div>
            <div class="thumbnail" onclick="currentDiv(3)"><img src="~/Content/image/img1-3.jpg"></div>
            <div class="thumbnail" onclick="currentDiv(4)"><img src="~/Content/image/img1-4.jpg"></div>
        </div>

        <div class="info-section">
            <div class="info-box"><i class="fa-solid fa-car-side"></i> Chỗ để xe: 4</div>
            <div class="info-box"><i class="fa fa-fw fa-bath"></i> Phòng tắm: 2</div>
            <div class="info-box"><i class="fa fa-fw fa-bed"></i> Phòng ngủ: 1</div>
            <div class="info-box"><i class="fa fa-wifi"></i> WiFi</div>
            <div class="info-box"><i class="fa fa-tv"></i> TV</div>
